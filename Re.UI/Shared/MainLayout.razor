@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>

            <MudLink Typo="Typo.h6" Href="/" Underline="Underline.None">
                Re.UI
            </MudLink>

        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink OnClick="@((e) => DrawerClose())" Href="epicrisis" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Эпикризы</MudNavLink>
            <MudNavLink Href="allEpicrisis" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.List">Все эпикризы</MudNavLink>
            <MudNavLink Href="diaries" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Add">Дневники</MudNavLink>
            <MudNavLink Href="allDiaries" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.List">Дневники БД</MudNavLink>
            <MudNavLink Href="appointments" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.List">Назначения</MudNavLink>
            <MudNavLink Href="drugs" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.List">Наркотики</MudNavLink>
            <MudNavLink Href="protocols" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.List">Протоколы</MudNavLink>
            <MudNavLink Href="hemo" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.List">Гемотрансфузии</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    void DrawerClose()
    {
        _drawerOpen = false;
        StateHasChanged();
    }
}