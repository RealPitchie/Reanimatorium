@using Re.Core.Models.Epicrisis

<MudGrid>
    <MudItem>
        <MudDatePicker style="width: 150px;" Label="Дата" @bind-Date="date" />
    </MudItem>
    <MudItem>
        <MudTimePicker style="width: 150px;" Label="Время" @bind-Time="time" />
    </MudItem>
</MudGrid>

<MudGrid>
    <MudItem xs="8">
        @if (isChestCavity)
        {
            <Re.UI.Pages.Components.Epicrisis.RoentgenKT.Epic_RoentgenKT_ChestCavity />
        }

        @if (isAbdominalCavity)
        {
           <Re.UI.Pages.Components.Epicrisis.RoentgenKT.Epic_RoentgenKT_AbdominalCavity/>
        }

        @if (isTomographic)
        {
             <Re.UI.Pages.Components.Epicrisis.RoentgenKT.Epic_RoentgenKT_Tomographic/>
        }
    </MudItem> 
    <MudItem xs="4">
        <MudStack Style="position: sticky; top: 100px; right: 50px">
            <MudItem >
                <MudCheckBox @bind-Checked="@isChestCavity" UnCheckedColor="Color.Error" Color="Color.Success"
                     Label="Эпикриз на рентгенологическое исследование грудной полости"/>
            </MudItem>
            <MudItem>
                <MudCheckBox @bind-Checked="@isAbdominalCavity" UnCheckedColor="Color.Error" Color="Color.Success" 
                Label="Эпикриз на рентгенологическое исследование грудной полости" />
            </MudItem>
            <MudItem>
                <MudCheckBox @bind-Checked="@isTomographic" UnCheckedColor="Color.Error" Color="Color.Success"
                             Label="Эпикриз на проведение томографического исследования" />
            </MudItem>
        </MudStack>
    </MudItem>
</MudGrid>

@code {
    DateTime? date = DateTime.Now;
    TimeSpan? time = DateTime.Now.TimeOfDay;
    bool isChestCavity = false;
    bool isAbdominalCavity = false;
    bool isTomographic = false;

}
